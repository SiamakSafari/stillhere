<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#1a1a2e"
    android:padding="12dp">
    
    <!-- Status row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        
        <View
            android:id="@+id/statusDot"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/status_indicator_circle" />
        
        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="Tap to Check In"
            android:textSize="11sp"
            android:textColor="#F97316" />
    </LinearLayout>
    
    <!-- Streak display -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_marginTop="8dp">
        
        <TextView
            android:id="@+id/streakCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="44sp"
            android:textStyle="bold"
            android:textColor="#F97316" />
        
        <TextView
            android:id="@+id/streakLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="8dp"
            android:text="days"
            android:textSize="12sp"
            android:textColor="#9CA3AF" />
    </LinearLayout>
    
    <!-- Tap hint -->
    <TextView
        android:id="@+id/tapHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="ðŸ‘† One tap check-in"
        android:textSize="10sp"
        android:textColor="#F97316" />
        
</LinearLayout>
