# Server Configuration
PORT=3002
NODE_ENV=development

# Authentication (set to 'true' to enable auth - recommended for production)
AUTH_ENABLED=false

# App URL (used for confirmation links in emails)
APP_URL=http://localhost:5173

# SendGrid Configuration
# Get your API key from https://sendgrid.com/
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Email Configuration
FROM_EMAIL=alerts@stillhere.app

# Database Configuration
DATABASE_PATH=./db/stillhere.db

# Twilio Configuration (optional - for SMS alerts)
# TWILIO_ACCOUNT_SID=your_account_sid
# TWILIO_AUTH_TOKEN=your_auth_token
# TWILIO_PHONE_NUMBER=+1234567890

# Web Push Configuration (optional - for push notifications)
# Generate VAPID keys: npx web-push generate-vapid-keys
# VAPID_PUBLIC_KEY=your_public_key
# VAPID_PRIVATE_KEY=your_private_key
# VAPID_SUBJECT=mailto:alerts@stillhere.app

# Sentry Configuration (optional - for error tracking)
# SENTRY_DSN=your_sentry_dsn
